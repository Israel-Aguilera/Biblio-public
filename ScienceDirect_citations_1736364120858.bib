pages = {874-879},
year = {2019},
note = {29th CIRP Design Conference 2019, 08-10 May 2019, Póvoa de Varzim, Portgal},
issn = {2212-8271},
doi = {https://doi.org/10.1016/j.procir.2019.05.018},
url = {https://www.sciencedirect.com/science/article/pii/S221282711931011X},
author = {Shervin Kadkhoda-Ahmadi and Alaa Hassan and Elnaz Asadollahi-Yazdi},
keywords = {Additive Manufacturing, Design for Additive Manufacturing, Activity Modeling, Process Planning},
abstract = {This paper presents a Design for Additive Manufacturing (DfAM) approach by focusing on manufacturability, process and resource selection. For this purpose, a novel process and resource selection approach for Additive Manufacturing (AM) is developed in order to investigate simultaneously the manufacturability and the accuracy issues in AM process selection. The proposed approach is presented by an IDEF0 activity model to create the context in which data requirements and data flows are defined for the selection. The preliminary process planning content of this approach covers traditional and AM process selection problem, where the decision maker has to select the most appropriate technology to manufacture the desired product. The following steps will be devoted to AM process planning. Therefore, the most appropriate alternative for fabrication with AM is selected by investigating the criteria as resource specifications and manufacturability analysis, as well as accuracy performance. This evaluation system has been applied as a step-by-step methodology that employs well-known procedures, such as screening, comparative assessment, and ranking process to select the most suitable alternative for production with AM. Finally, the proposed approach is illustrated by an industrial case study, and it provides a DfAM guideline for engineers and researchers in the early phase of the product development process.}
}
@article{NIJSSEN2000121,
title = {Determinants of the Adoption of New Product Development Tools by Industrial Firms},
journal = {Industrial Marketing Management},
volume = {29},
number = {2},
